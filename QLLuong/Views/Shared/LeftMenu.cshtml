@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers
<div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-dark bg-custom" id="sidenavAccordion">
        <div class="sb-sidenav-menu">
            <div class="nav">
                <!-- Home -->
                <a class="nav-link" asp-route="Home">
                    <div class="sb-nav-link-icon"><i class="fa-solid fa-house"></i></div>
                    Home
                </a>

                <!-- Quản lý Nhân viên -->
                <a class="nav-link" asp-route="NhanVienList">
                    <div class="sb-nav-link-icon"><i class="fa-solid fa-users"></i></div>
                    Quản lý Nhân viên
                </a>

                <!-- Quản lý Chấm công -->
                <a class="nav-link" asp-route="ChamCong">
                    <div class="sb-nav-link-icon"><i class="fa-solid fa-calendar-xmark"></i></div>
                    Quản lý Chấm công
                </a>

                <!-- Quản lý Lương với Dropdown -->
                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseLuong" aria-expanded="false" aria-controls="collapseLuong">
                    <div class="sb-nav-link-icon"><i class="fa-solid fa-list"></i></div>
                    Quản lý lương
                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                </a>
                <div class="collapse" id="collapseLuong" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                    <nav class="sb-sidenav-menu-nested nav">
                        <a class="nav-link" asp-route="LuongCuAdmin">Lương cũ</a>
                        <a class="nav-link" asp-route="LuongHTAdmin">Lương hiện tại</a>
                    </nav>
                </div>
            </div>
        </div>
        <div class="sb-sidenav-footer">
            <div class="small">Logged in as: @Context.Session.GetString("Username")</div>
        </div>
    </nav>
</div>
