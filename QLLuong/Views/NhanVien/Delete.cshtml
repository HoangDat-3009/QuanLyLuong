@model QLLuong.Models.NhanVien

@{
    ViewData["Title"] = "Delete NhanVien";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h1 class="text-center text-danger">Xoá nhân viên</h1>
<div class="card shadow p-4 mx-auto" style="max-width: 700px;">
    <div class="card-body">
        <h3 class="text-warning text-center">Bạn chắc chắn muốn xoá nhân viên này không?</h3>
        <h4 class="text-center mb-4">@Model.HoTen</h4>
        <dl class="row mb-4">
            <dt class="col-sm-4 font-weight-bold">Mã nhân viên</dt>
            <dd class="col-sm-8">@Model.MaNhanVien</dd>

            @* <dt class="col-sm-4 font-weight-bold">Họ và tên</dt>
            <dd class="col-sm-8">@Model.HoTen</dd> *@

            <dt class="col-sm-4 font-weight-bold">Giới tính</dt>
            <dd class="col-sm-8">@Model.GioiTinh</dd>

            <dt class="col-sm-4 font-weight-bold">Ngày sinh</dt>
            <dd class="col-sm-8">@Model.NgaySinh?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4 font-weight-bold">Nơi sinh</dt>
            <dd class="col-sm-8">@Model.NoiSinh</dd>

            <!-- Add other fields if necessary -->
        </dl>

        <div class="text-center">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="MaNhanVien" />
                <button type="submit" class="btn btn-danger btn-lg px-4">Xác nhận</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary btn-lg px-4 ml-3">Cancel</a>
        </div>
    </div>
</div>
