@model IEnumerable<QLLuong.Models.NhanVien>

@{
    ViewData["Title"] = "NhanVien List";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="get" asp-action="Index" class="form-inline my-3">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control"
                           placeholder="Nhập mã nhân viên hoặc tên nhân viên" />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>STT</th>
                    <th>Mã nhân viên</th>
                    <th>Họ và tên</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Nơi sinh</th>
                    <th>Phòng ban</th>
                    <th>Chức vụ</th>
                    <th>Trình độ</th>
                    <th>Chuyên môn</th>
                    <th>Địa chỉ</th>
                    <th>Số điện thoại</th>
                    <th>Hệ số lương</th>
                    <th>CCCD</th>
                    <th>Ngân hàng</th>
                    <th>Số tài khoản</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var STT = 1;
                }
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@STT</td>
                        <td>@s.MaNhanVien</td>
                        <td>@s.HoTen</td>
                        <td>@s.NgaySinh?.ToString("dd/MM/yyyy")</td>
                        <td>@s.GioiTinh</td>
                        <td>@s.NoiSinh</td>
                        <td>@s.MaPhongBanNavigation?.TenPhongBan</td>
                        <td>@s.MaChucVuNavigation?.TenChucVu</td>
                        <td>@s.MaTrinhDoNavigation?.TenTrinhDo</td>
                        <td>@s.MaChuyenMonNavigation?.TenChuyenMon</td>
                        <td>@s.DiaChi</td>
                        <td>@s.DienThoai</td>
                        <td>@s.MaHeSoNavigation?.HeSoLuong</td>
                        <td>@s.Cccd</td>
                        <td>@s.TaiKhoanNganHang</td>
                        <td>@s.SoTaiKhoanNganHang</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-maNhanVien="@s.MaNhanVien" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-maNhanVien="@s.MaNhanVien" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                    STT++;
                }
            </tbody>
        </table>
    </div>
</div>
