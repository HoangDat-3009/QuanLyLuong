@{
    ViewData["Title"] = "Luong List";
    Layout = "~/Areas/Staff/Views/Shared/MyLayoutStaff.cshtml";
}
@model QLLuong.Models.LuongCu
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header text-center bg-primary text-white">
            <h3>Bảng lương tháng @Model.Thang</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4 text-center">
                    <img src="https://via.placeholder.com/150" class="img-thumbnail rounded-circle" alt="Employee Image">
                    <h5 class="mt-2"> @Model.MaNhanVienNavigation?.HoTen</h5>
                    <p>@Model.MaNhanVien</p>
                </div>
                <div class="col-md-8">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Nội dung</th>
                                <th class="text-end">Số tiền (VNĐ)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Lương cơ bản</td>
                                <td class ="text-end">@Model.LuongCoBan</tdclass>
                            </tr>
                            <tr>
                                <td>Hệ số</td>
                                <td class="text-end">@Model.HeSo</tdclass>
                            </tr>
                            <tr>
                                <td>Số công</td>
                                <td class="text-end">@Model.SoCong</td>
                            </tr>
                            <tr>
                                <td>Phụ cấp chức vụ</td>
                                <td class ="text-end">@Model.PhuCapChucVu</td>
                            </tr>
                            <tr>
                                <td>Phụ cấp trình độ</td>
                                <td class="text-end">@Model.PhuCapTrinhDo</td>
                            </tr>
                            <tr>
                                <td>Bảo hiểm y tế</td>
                                <td class="text-end">@Model.Bhyt</td>
                            </tr>
                            <tr>
                                <td>Bảo hiểm thất nghiệp</td>
                                <td class ="text-end">@Model.Bhtn</td>
                            </tr>
                            <tr>
                                <td>Bảo hiểm xã hội</td>
                                <td class ="text-end">@Model.Bhxh</td>
                            </tr>
                            <tr>
                                <td>Khen thưởng hoặc kỷ luật</td>
                                <td class ="text-end">@Model.KhenThuongKyLuat</td>
                            </tr>
                            <tr class="table-primary">
                                <th>Thực lĩnh</th>
                                <th class="text-end">@Model.ThucLinh</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted text-center">
            Ngày xuất bảng lương: @DateTime.Now
        </div>
    </div>
</div>