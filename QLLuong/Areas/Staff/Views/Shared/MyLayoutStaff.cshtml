@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - Công ty TNHH một thành viên 789</title>
    <link rel="stylesheet" href="~/css/bootstrap5.css">
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

</head>

<body class="sb-nav-fixed">
    <!-- Begin Top nav -->
    @* <partial name="TopNav" /> *@
    <nav class="sb-topnav navbar navbar-expand navbar-dark  bg-custom">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="">Quản lý lương </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        </form>
        <div style="color: white;padding: 15px 25px; cursor: pointer;" class="tooltip-div" data-bs-toggle="tooltip" data-bs-placement="top" title="Contact: help@example.com">
            <i class="fa-solid fa-circle-question"></i> Trợ giúp
        </div>


        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
                   aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li style="padding: 5px 16px ;cursor: default;">Account: @Context.Session.GetString("Username")</li>
                    <hr />
                    <li><a class="dropdown-item" href="#!">Settings</a></li>
                    <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li><a asp-controller="LogIn" asp-action="Logout" class="dropdown-item">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <!-- End Top nav -->
    <div id="layoutSidenav">
        <!-- Begin Left menu -->
        @* <partial name="LeftMenu" /> *@
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark bg-custom" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <!-- <div class="sb-sidenav-menu-heading">Core</div> -->
                        <a class="nav-link" asp-route="HomeStaff">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-house"></i></div>
                            Home
                        </a>
                        @* asp-area="Staff" asp-controller="ChamCongStaff" asp-action="Index" *@

                        <a class="nav-link" asp-area="Staff" asp-controller="StaffInfor" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-users"></i></div>
                            Thông tin Nhân viên
                        </a>
                        <a class="nav-link" asp-area="Staff" asp-controller="ChamCongStaff" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-calendar-xmark"></i></div>
                            Thông tin Chấm công
                        </a>
                        <a class="nav-link" asp-route="NhanVien_Luong">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-list"></i></div>
                            Thông tin lương
                        </a>


                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as: @Context.Session.GetString("Username")</div>
                </div>
            </nav>
        </div>
        <!-- End Left menu -->
        <!-- Begin Right content -->
        <div id="layoutSidenav_content">
            <!-- Begin Main -->
            <main>
                @RenderBody()
            </main>
            <!-- End Main -->
            <!-- Begin Footer -->
            @* <partial name="Footer" /> *@
            <footer class="py-4 bg-light mt-auto bg-footer">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; 2024</div>
                    </div>
                </div>
            </footer>
            <!-- End Footer -->
        </div>
        <!-- End Right content -->
    </div>
    <script src="~/js/scripts.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Scripts", required: false);
</body>

</html>
